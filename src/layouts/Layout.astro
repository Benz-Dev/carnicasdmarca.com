---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="DMARCA es una empresa familiar nacida en el corazón de Níjar. Con la experiencia del tiempo y la dedicación de muchos años, nos dedicamos a recuperar los sabores tradicionales perdidos de nuestra tierra." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,100;9..40,200;9..40,300;9..40,400;9..40,500;9..40,600;9..40,700;9..40,800;9..40,900;9..40,1000&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
	* {
		font-family: 'DM Sans', sans-serif;
	}
  
  /* width */
  ::-webkit-scrollbar {
      width: 5px;
      background: rgb(23 23 23);
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
      background: gray;
      border-radius: 10px;
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
      background: red;
  }
</style>
